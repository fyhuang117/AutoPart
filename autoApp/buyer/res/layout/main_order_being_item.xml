<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/common_padding"
              android:paddingRight="@dimen/common_padding"
              android:paddingTop="@dimen/common_margin"
              android:paddingBottom="@dimen/common_margin"
        >
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

        <TextView android:id="@+id/being_title"
                  style="@style/common_text"
                  android:textColor="@color/light_grey"
                  android:text="保险杠"
                  android:layout_centerVertical="true"/>

        <TextView android:id="@+id/being_state"
                  style="@style/CommonTextView_Content"
                  android:text="@string/state_being"
                  android:textColor="@color/text_orange"
                  android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <TextView android:id="@+id/being_content"
              style="@style/CommonTextView_Content_Grey"
              android:singleLine="true"
              android:layout_marginTop="@dimen/common_margin"
              android:text="宝马3系 2015款 2.0L 320Li 时尚型 "/>


</LinearLayout>