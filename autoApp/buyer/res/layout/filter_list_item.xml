<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:paddingTop="@dimen/common_padding_middle"
            android:paddingBottom="@dimen/common_padding_middle"
            >
        <TextView android:id="@+id/common_item_title"
                  style="@style/common_text"
                  android:text="@string/app_name"
                  android:layout_centerVertical="true"/>

        <TextView android:id="@+id/common_item_num"
                  style="@style/CommonTextView_Style"
                  android:text="1"
                  android:background="@drawable/custom_oval_red"
                  android:layout_toRightOf="@+id/common_item_title"
                  android:textColor="@color/white"
                  android:layout_marginLeft="@dimen/common_margin_top"
                  android:gravity="center"
                  android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout style="@style/line" android:layout_marginLeft="@dimen/common_padding"/>
</LinearLayout>