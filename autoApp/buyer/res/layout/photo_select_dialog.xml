<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
                android:background="@drawable/custom_dialog_bg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/confirm_dialog_height"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="@dimen/confirm_dialog_title"
              android:textColor="@color/bg_color"
              android:gravity="center"
              android:id="@+id/regist_dialog_title"
              android:layout_width="fill_parent"
              android:layout_height="@dimen/confirm_title_height"
              android:text="选择照片"/>
    <View android:id="@+id/regist_dialog_line"
          android:background="@color/bg_color"
          android:layout_width="fill_parent" android:layout_height="1.0dip"
          android:layout_below="@+id/regist_dialog_title"/>
    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:weightSum="2.0"
                  android:layout_below="@id/regist_dialog_line">
        <TextView android:gravity="center"
                  android:id="@+id/photo_camera"
                  android:layout_width="fill_parent"
                  android:layout_height="0.0dip"
                  android:text="@string/photo_camera"
                  android:layout_weight="1.0"
                  style="@style/common_text"/>
        <View android:id="@id/confirm_line_center"
              android:background="@color/alpha_grey"
              android:layout_width="fill_parent"
              android:layout_height="1.0dip"/>
        <TextView android:gravity="center"
                  android:id="@+id/photo_gallery"
                  android:layout_width="fill_parent"
                  android:layout_height="0.0dip"
                  android:text="@string/photo_gallery" android:layout_weight="1.0"
                  style="@style/common_text"/>
    </LinearLayout>
</RelativeLayout>