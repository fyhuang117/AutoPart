<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/inquiry_message_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:layout_marginTop="@dimen/common_padding_middle"
                  android:orientation="vertical">

        <RelativeLayout style="@style/inquiry_relative">
            <TextView style="@style/common_text"
                      android:textColor="@color/light_grey"
                      android:layout_centerVertical="true"
                      android:text="买家留言"/>

            <LinearLayout android:id="@+id/voice_view"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_alignParentRight="true"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">
                <TextView
                        style="@style/common_text"
                        android:textColor="@color/light_grey"
                        android:text="语音留言"/>

                <ImageView android:id="@+id/video_recorder_play_btn"
                           style="@style/image_right"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_marginLeft="@dimen/common_margin"
                           android:src="@drawable/video_recorder_play_btn"
                        />

            </LinearLayout>

        </RelativeLayout>

        <View style="@style/line" android:layout_marginLeft="@dimen/common_padding"/>

        <RelativeLayout style="@style/inquiry_relative">

            <TextView android:id="@+id/inquiry_message"
                      style="@style/common_text"
                      android:text="@string/message_text_null"
                      android:layout_centerVertical="true"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>